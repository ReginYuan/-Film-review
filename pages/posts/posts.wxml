<view>
  <!-- 电影轮播图 -->
  <swiper interval="3000" indicator-dots="{{true}}" autoplay="{{true}}">
    <swiper-item>
      <!-- 插槽 -->
      <image src="/images/jingangchuan-title.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/jixianfeng-title.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/yidianjiudaojia-title.png"></image>
    </swiper-item>
  </swiper>
  <!-- 
  onGoToDetail 方法 点击跳转到文章详情页面
 MaxImage 方法  点击头像放大头像
 onGoToDetail 方法包含MaxImage 方法,所以必定会产生冲突,由此引发了冒泡时间的应用,给MaxImage 方法catch,阻止事件向上冒泡来达到头像放大和跳转到文章详情页面的冲突. -->
  <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="index" wx:key="id">
    <!-- 电影文章 -->
    <view bind:tap="onGoToDetail" class="post-container">
      <!-- 作者 -->
      <view class="post-author-date">
        <image bind:tap="MaxImage" class="post-author" src="{{item.authorImgsSrc}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <!-- 电影简介 -->
      <!-- title 数据绑定-->
      <text class="post-title">{{item.title}}</text>
      <image class="post-image" src="{{item.jianjieimgsrc}}"></image>
      <text class="post-content">{{item.jianjiecontent}}</text>

      <!-- 收藏 观看 功能-->
      <view class="post-like">
        <!-- <image class="post-like-image" src="/images/icon/chat.png"></image> -->
        <!-- icon组件使用 -->
        <l-icon class="post-like-image" size="32" color="#666" name="favor" />
        <text class="post-like-font">{{item.collection}}</text>
        <!-- <image class="post-like-image" src="/images/icon/view.png"></image> -->
        <l-icon class="post-like-image" size="32" color="#666" name="eye" />
        <text class="post-like-font">{{item.reading}}</text>

      </view>
    </view>
  </block>
</view>